{
  "compilerOptions": {
    "target": "ES2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      // "@modules/*": ["src/modules/*"],
      // "@config/*": ["src/config/*"],
      // "@shared/*": ["src/shared/*"],
      // "@errors/*": ["src/http/error/*"],
      // "@utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
